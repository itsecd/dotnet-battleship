<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="using:Battleship.Client.Views"
        xmlns:vm="using:Battleship.Client.ViewModels"
        x:Class="Battleship.Client.Views.MainWindow"
        SizeToContent="WidthAndHeight"
        CanResize="False"
        Title="Battleship.Client">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel Orientation="Horizontal" Spacing="20" Margin="10">
        <v:PlaygroundView Classes="edit-mode" DataContext="{Binding Edit}" />
        <v:PlaygroundView Classes="my-mode" DataContext="{Binding My}" />
        <v:PlaygroundView Classes="opponent-mode" DataContext="{Binding Opponent}" />
    </StackPanel>

</Window>
